                    <!-- Dial pad -->

                </div>
            </div>
            <!-- Modal Footer -->
            <div class="modal-footer mx-auto">
                <button type="button" class="btn btn btn-default btn-circle btnHangUp">
                    <i class="fa fa-phone fa-1x fa-rotate-icon" aria-hidden="true" style="color: red;"></i>
                </button>
            </div>
        </div>
    </div>
</div>